<html>
  <head>
    <title>資策會教研所</title>  
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div style="margin:100px;">
      <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
          <a class="navbar-brand" href="/">資策會教研所 </a>
          <ul class="nav navbar-nav">
            <li>
              <a href="/">首頁</a>
            </li>
            <li class="active">
              <a href="/classes">課程</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <h1 id="className"></h1>
        <p id="idNo"></p>
        <p id="timesType"></p>
        <p id="classDate"></p>
        <p id="address"></p>
      </div>
    </div>

    <script>
      $(document).ready(function(){
        var id = "<%= id %>"
        $.get( "/1/class/" + id, function( result ) {
          var data = result.data
          $("#className").html(data.name)
          $("#idNo").html("代碼：" + data.idNo)
          $("#timesType").html("時段：" + data.date + " " + data.timesType)
          $("#classDate").html("起訖：" + data.startDate.substring(0, 10) + " ~ " + data.endDate.substring(0, 10))
          $("#address").html("地址：" + data.address)
        })
      })
    </script>
  </body>
</html>