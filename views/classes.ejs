<html>
  <head>
    <title>資策會教研所</title>  
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div style="margin:100px;">
      <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
          <a class="navbar-brand" href="/">資策會教研所</a>
          <ul class="nav navbar-nav">
            <li>
              <a href="/">首頁</a>
            </li>
            <li class="active">
              <a href="/classes">課程</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="container">
        <div class="row">
          <h1>課程資訊</h1>
          <table id="classTable" class="table table-hover table-responsive">
            <tr>
              <th>課名</th>
              <th>時段</th>
              <th>開始日期</th>
              <th>結束日期</th>
            </tr>
          </table>      
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function(){
        $.get( "/1/classes", function( result ) {
          var data = result.data
          for(var i in data) {
            $("#classTable tr:last").after( 
              "<tr>" +
              "<td><a href='/class/" + data[i]._id + "'>" + data[i].name + "</a></td>" +
              "<td>" +  data[i].date + " " + data[i].timesType + "</td>" +
              "<td>" + data[i].startDate.substring(0,10) + "</td>" +
              "<td>" + data[i].endDate.substring(0,10) + "</td>" +
              "</tr>")
          }
        })
      })
    </script>
  </body>
</html>